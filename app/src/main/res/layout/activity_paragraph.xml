<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paragraph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.emobi.healthlife.activity.ParagraphActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read this paragraph" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome:-" />

            <TextView
                android:id="@+id/tv_paragraph_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting with paragraph no " />

            <TextView
                android:id="@+id/tv_starting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Time:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read as fast as you can while comprehending at the same time. " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions will start after 100 seconds" />

            <TextView
                android:id="@+id/tv_paragraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="paragraph" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press this button to finish reading " />


            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONE" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
